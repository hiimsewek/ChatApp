{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "assets": ["./assets"],
      "components": ["./src/components"],
      "contexts": ["./src/contexts"],
      "hooks": ["./src/hooks"],
      "navigation": ["./src/navigation"],
      "schemas": ["./src/schemas"],
      "screens": ["./src/screens"],
      "services/*": ["./src/services/*"],
      "theme": ["./src/theme"],
      "types": ["./src/types"],
      "utils/*": ["./src/utils/*"]
    }
  }
}
